<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@android:color/holo_blue_dark"
    android:layout_height="match_parent">
   <ImageView
        android:src="@android:drawable/ic_menu_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView1" />

    <TextView
        android:text="@string/txtUsuario"
        android:textSize="20dp"
        android:textColor="@android:color/white"
        android:paddingVertical="5dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView1" />
    <EditText
        android:inputType="textPersonName"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/white"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtusuario" />
    <TextView
        android:text="@string/txtContraseña"
        android:textSize="20dp"
        android:paddingVertical="5dp"
        android:textColor="@android:color/white"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2" />
    <EditText
        android:inputType="textPassword"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/white"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtcontraseña" />

    <TextView
        android:text="@string/txtNombres"
        android:textSize="20dp"
        android:paddingVertical="5dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:textColor="@android:color/white"
        android:layout_height="wrap_content"
        android:id="@+id/textView4" />
    <EditText
        android:inputType="textPersonName"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/white"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtNombres" />
    <TextView
        android:text="@string/txtApellidos"
        android:textSize="20dp"
        android:paddingVertical="5dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:textColor="@android:color/white"
        android:layout_height="wrap_content"
        android:id="@+id/textView5" />
    <EditText
        android:inputType="textPersonName"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/white"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtApellidos" />
    <TextView
        android:text="@string/txTelefono"
        android:textSize="20dp"
        android:paddingVertical="5dp"
        android:textColor="@android:color/white"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3" />
    <EditText
        android:inputType="textPersonName"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/white"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtTelefono" />
    <TextView
        android:text="Especialidad"
        android:textSize="20dp"
        android:paddingVertical="5dp"
        android:textColor="@android:color/white"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView6" />
    <Spinner
        
        android:layout_height="wrap_content"
        android:layout_width="200dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/spinnerEspecialidad" />
    <TextView
        android:text="Horario"
        android:textSize="20dp"
        android:paddingVertical="5dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:textColor="@android:color/white"
        android:layout_height="wrap_content"
        android:id="@+id/textView7" />
    <Spinner
       
        android:layout_height="wrap_content"
        android:layout_width="200dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/spinnerHorario" />
    <Button
        android:text="@string/btnRegistrar"
        android:layout_width="150dp"
        android:layout_marginVertical="10dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/btnRegistrar" />

</LinearLayout>

